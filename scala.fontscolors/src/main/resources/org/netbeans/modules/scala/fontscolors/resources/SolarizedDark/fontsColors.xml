<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fontscolors PUBLIC "-//NetBeans//DTD Editor Fonts and Colors settings 1.1//EN" "http://www.netbeans.org/dtds/EditorFontsColors-1_1.dtd">

<fontscolors>
    <!-- ScalaTokenId categories -->
    <fontcolor name="CharacterLiteral" default="char" />
    <fontcolor name="IntegerLiteral" default="number" />
    <fontcolor name="FloatingPointLiteral" default="number" />
    <fontcolor name="StringLiteral" default="string" />
    <fontcolor name="Error" default="error" />
    <fontcolor name="Identifier" default="identifier" />
    <fontcolor name="Ws" default="whitespace" />
    <fontcolor name="Keyword" default="keyword" />
    <fontcolor name="Operator" default="operator" />
    <fontcolor name="xml" default="keyword" />

    <fontcolor name="BlockComment" default="comment" />
    <fontcolor name="LineComment" default="comment" />
    <fontcolor name="DocComment" default="comment" />
    <fontcolor name="CommentTag" default="comment">
        <font style="bold" />
    </fontcolor>

    <fontcolor name="True" foreColor="b58900" /> <!-- yellow -->
    <fontcolor name="False" foreColor="b58900" />
    <fontcolor name="Abstract" foreColor="b58900" />
    <fontcolor name="Final" foreColor="b58900" />
    <fontcolor name="Implicit" foreColor="b58900" />
    <fontcolor name="Lazy" foreColor="b58900" />
    <fontcolor name="Override" foreColor="b58900" />
    <fontcolor name="Private" foreColor="b58900" />
    <fontcolor name="Protected" foreColor="b58900" />
    <fontcolor name="Sealed" foreColor="b58900" />

    <!-- This is intended for an embedded regular expression language -->
    <!--
    <fontcolor name="REGEXP_TEXT" foreColor="ff006f00" />
    <fontcolor name="REGEXP_META" foreColor="ff006f00" />
    <fontcolor name="REGEXP_INVALID" foreColor="ffff006b" strikeThrough="ffff006b" />
    -->

    <!--"semantic" highlighting:-->
    <fontcolor name="mod-declaration">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="mod-static">
        <font style="italic" />
    </fontcolor>
    <fontcolor name="mod-global">
        <font style="italic" />
    </fontcolor>
    <fontcolor name="mod-public" underline="000000" />
    <fontcolor name="mod-abstract">
        <font style="italic" />
    </fontcolor>
    <fontcolor name="mod-deprecated" strikeThrough="93a1a1" /> <!-- base1 -->

    <fontcolor name="mod-class" foreColor="678CB1" /> <!-- violet, Type -->

    <fontcolor name="mod-method" foreColor="678CB1" /> <!-- violet, method def -->
    <fontcolor name="mod-constructor" foreColor="839496" /> <!-- base0, method ref -->
    <fontcolor name="mod-custom1"> <!-- implicit method Ref -->
        <font style="italic" />
    </fontcolor>
 
    <fontcolor name="mod-custom2" underline="859900" /> <!-- green lazy val Ref/Dfn -->
    <fontcolor name="mod-field" foreColor="859900" /> <!-- green val -->
    <fontcolor name="mod-local-variable" foreColor="dc322f" /> <!-- red, var -->
    <fontcolor name="mod-parameter" foreColor="6c71c4" /> <!-- violet param -->

    <fontcolor name="mod-unused" waveUnderlined="999999" />

    <fontcolor name="mod-annotation-type" />
    <fontcolor name="mod-enum" />

    <fontcolor name="mod-private" />
    <fontcolor name="mod-package-private" foreColor="268bd2" /> <!-- blue, packege name -->
    <fontcolor name="mod-protected" />

    <fontcolor name="mod-interface" default="comment" />
    <fontcolor name="mod-regexp" foreColor="e9c062" />

    <!--currently not used:-->
    <!--    <fontcolor name="mod-type-parameter-declaration" bgColor="lightGray"/>
    <fontcolor name="mod-type-parameter-use" bgColor="green"/>
    <fontcolor name="mod-undefined" foreColor="red"/>-->

    <!--mark occurrences:-->
    <fontcolor name="mark-occurrences" bgColor="38566f" /> 

    <!-- JsCommentTokenId categories -->
    <fontcolor name="js-comment-tag" default="comment" />
    <fontcolor name="html-tag" default="comment" />
    <fontcolor name="left-curly" default="comment" />
    <fontcolor name="right-curly" default="comment" />
    
    <!-- "editor" highlighting: -->
    <fontcolor name="highlight-caret-row" bgColor="073642" />  <!-- base02 -->
    <fontcolor name="line-number" foreColor="657B83" />  <!-- base00 -->
    <fontcolor name="indent-guide-lines" foreColor="21505c" /> <!-- base02 lighten 10% -->
    <fontcolor name="text-limit-line-color" foreColor="586e75" />  <!-- base01 --> 
    <fontcolor name="caret-color-insert-mode" foreColor="fdf6e3" /> <!-- base3 -->
    <fontcolor name="caret-color-overwrite-mode" foreColor="fdf6e3" /> <!-- base3 -->
    <fontcolor name="selection" bgColor="eee8d5" />  <!-- base2 --> 
    <fontcolor name="inc-search" bgColor="38566f" />
    <fontcolor name="highlight-search" bgColor="38566f" />
    <fontcolor name="nbeditor-bracesMatching-match" bgColor="cb4b16" /> <!-- orange --> 
    <fontcolor name="nbeditor-bracesMatching-mismatch" bgColor="cc6600" foreColor="white" />

</fontscolors>
