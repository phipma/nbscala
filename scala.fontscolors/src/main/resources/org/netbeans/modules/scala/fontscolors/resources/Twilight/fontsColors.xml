<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fontscolors PUBLIC "-//NetBeans//DTD Editor Fonts and Colors settings 1.1//EN" "http://www.netbeans.org/dtds/EditorFontsColors-1_1.dtd">

<fontscolors>
    <!-- See http://ui.netbeans.org/docs/ui/editor_fonts_colors/Editor_fonts_and_colors.htm#ruby -->
    <!-- A couple of things are not accurate yet; globals are not bold, and method calls are
    black and bold instead of green (which would be identical to fields) -->

    <!-- ScalaTokenId categories -->
    <fontcolor name="CharacterLiteral" default="char" />
    <fontcolor name="IntegerLiteral" default="number" />
    <fontcolor name="FloatingPointLiteral" default="number" />
    <fontcolor name="StringLiteral" default="string" />
    <fontcolor name="Error" default="error" />
    <fontcolor name="Identifier" default="identifier" />
    <fontcolor name="Ws" default="whitespace" />
    <fontcolor name="Keyword" default="keyword" />
    <fontcolor name="Operator" default="operator" />
    <fontcolor name="xml" default="keyword" />

    <fontcolor name="BlockComment" default="comment" />
    <fontcolor name="LineComment" default="comment" />
    <fontcolor name="DocComment" default="comment" />
    <fontcolor name="CommentTag" default="comment">
        <font style="bold" />
    </fontcolor>

    <fontcolor name="True" foreColor="CDA869" /> 
    <fontcolor name="False" foreColor="CDA869" />
    <fontcolor name="Abstract" foreColor="CDA869" />
    <fontcolor name="Final" foreColor="CDA869" />
    <fontcolor name="Implicit" foreColor="CDA869" />
    <fontcolor name="Lazy" foreColor="CDA869" />
    <fontcolor name="Override" foreColor="CDA869" />
    <fontcolor name="Private" foreColor="CDA869" />
    <fontcolor name="Protected" foreColor="CDA869" />
    <fontcolor name="Sealed" foreColor="CDA869" />

    <!-- This is intended for an embedded regular expression language -->
    <!--
    <fontcolor name="REGEXP_TEXT" foreColor="ff006f00"/>
    <fontcolor name="REGEXP_META" foreColor="ff006f00">
        <font style="bold"/>
    </fontcolor>
    <fontcolor name="REGEXP_INVALID" foreColor="ffff006b" strikeThrough="ffff006b" >
        <font style="bold"/>
    </fontcolor>
    -->

    <!--"semantic" highlighting:-->
    <fontcolor name="mod-declaration">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="mod-static">
        <font style="italic" />
    </fontcolor>
    <fontcolor name="mod-global">
        <font style="italic" />
    </fontcolor>
    <fontcolor name="mod-public" underline="000000" />
    <fontcolor name="mod-abstract">
        <font style="italic" />
    </fontcolor>
    <fontcolor name="mod-deprecated" strikeThrough="586e75" /> <!-- base01 -->

    <fontcolor name="mod-class" foreColor="9B5C2E" /> <!-- type -->

    <fontcolor name="mod-method" foreColor="FFFFFF" /> <!-- method def -->
    <fontcolor name="mod-constructor" foreColor="FFFFFF" /> <!-- method ref -->
    <fontcolor name="mod-custom1"> <!-- implicit method Ref -->
        <font style="italic" />
    </fontcolor>
    <fontcolor name="mod-custom2" underline="586e75" /> <!-- lazy val Ref/Dfn -->
    <fontcolor name="mod-interface" default="comment" />
    
    <fontcolor name="mod-field" foreColor="FFFFFF" /> <!-- val -->
    <fontcolor name="mod-local-variable" foreColor="d33682" /> <!-- magenta, var -->
    <fontcolor name="mod-parameter" foreColor="859900" /> <!-- green, param -->

    <fontcolor name="mod-unused" default="comment" />

    <fontcolor name="mod-annotation-type" />
    <fontcolor name="mod-enum" />

    <fontcolor name="mod-private" />
    <fontcolor name="mod-package-private" foreColor="cb4b16" /> <!-- orange packege name -->
    <fontcolor name="mod-protected" />

    <fontcolor name="mod-regexp" foreColor="e9c062" />

    <!--currently not used:-->
    <!--    <fontcolor name="mod-type-parameter-declaration" bgColor="lightGray"/>
    <fontcolor name="mod-type-parameter-use" bgColor="green"/>
    <fontcolor name="mod-undefined" foreColor="red"/>-->

    <!--mark occurrences:-->
    <fontcolor name="mark-occurrences" bgColor="115011"/>

    <!-- JsCommentTokenId categories -->
    <fontcolor name="js-comment-tag" default="comment">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="html-tag" default="comment">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="left-curly" default="comment"/>
    <fontcolor name="right-curly" default="comment"/>

    
    <fontcolor name="guarded" bgColor="darkGray"/>
    <fontcolor name="caret-color-insert-mode" foreColor="lightGray"/>
    <fontcolor name="highlight-caret-row" bgColor="ff181818" />
    <fontcolor name="line-number" foreColor="ffdd7522"/>
    <fontcolor name="indent-guide-lines" foreColor="darkGray" /> 
    <fontcolor name="text-limit-line-color" foreColor="ff253e5a"/>
    <fontcolor name="code-folding-bar" foreColor="918A93"/>
    <fontcolor name="code-folding" foreColor="918A93" />
    <fontcolor name="selection" bgColor="ff38566f"/>
    <fontcolor name="hyperlinks" foreColor="ff5098e0" underline="blue"/>
    <fontcolor name="block-search" bgColor="ffe0e8f1"/>
    <fontcolor name="highlight-search" bgColor="ff38566f"/>
    <fontcolor name="inc-search" bgColor="ff38566f"/>
    <fontcolor name="synchronized-text-blocks-ext" foreColor="ffcc0099"/>
    <fontcolor name="synchronized-text-blocks-ext-slave" foreColor="ff996600"/>
    <fontcolor name="status-bar" foreColor="white" bgColor="ff121e31"/>
    <fontcolor name="status-bar-bold" bgColor="red"/>
    <fontcolor name="nbeditor-bracesMatching-match" foreColor="white" bgColor="ff386f38">
        <font style="bold"/>
    </fontcolor>
    <fontcolor name="nbeditor-bracesMatching-mismatch" foreColor="white" bgColor="ff6f3757">
        <font style="bold"/>
    </fontcolor>
</fontscolors>
